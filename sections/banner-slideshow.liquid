{% if section.blocks.size > 0 %}
<div class="banner slideshow {{ section.settings.custom_class }} {{ section.settings.add_padding_top }} {{ section.settings.add_padding_bottom }} {{ section.settings.add_margin_top }} {{ section.settings.add_margin_bottom }} {{ section.settings.add_border_top }} {{ section.settings.add_border_bottom }} {{ section.settings.border_width }}" {% if section.settings.background_color !='' %}style="background-color: {{ section.settings.background_color }}" {% endif %}>
    <div class="wrapper {{ section.settings.max_width }}">
        <div class="row">
            <div class="owl-carousel">
                {% for block in section.blocks %}
                <div class="col-img {{ block.settings.text_color | escape }}">
                    <div class="inner">
                        {% if block.settings.link != blank %}<a class="img" href="{{ block.settings.link }}">{% endif %}
                            {% if block.settings.show_video %}
                            <div class="video-frame">
                                {% if block.settings.video_url != blank %}
                                <video preload="auto" autoplay="autoplay" muted="muted" loop="loop" playsinline>
                                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                                    </source>
                                </video>
                                {% else %}
                                {% case block.settings.video_url_iframe.type %}
                                {% when 'youtube' %}
                                <iframe src="https://www.youtube.com/embed/{{ block.settings.video_url_iframe.id }}?vq=720?rel=0&autoplay=1&mute=1" width="850" height="480" frameborder="0" volume="0" allowfullscreen></iframe>
                                {% when 'vimeo' %}
                                <div class="vimeo">
                                <iframe src="https://player.vimeo.com/video/{{ block.settings.video_url_iframe.id }}?color={{ settings.primary_accent_color | remove: '#' }}&title=0&byline=0&portrait=0&autoplay=1&loop=1&autopause=0&muted=1&sidedock=0&background=1"  width="850" height="480" frameborder="0" allow="autoplay" volume="0" allowFullScreen></iframe>
                                </div>
                                {% endcase %}
                                {% endif %}
                            </div>
                            {% else %}
                            {% if block.settings.image %}
                            <picture>
                                <source media="(min-width: 1280px)" srcset="{{ block.settings.image | img_url: '1920x' }}">
                                <source media="(min-width: 900px)" srcset="{{ block.settings.image | img_url: '1280x' }}">
                                <source media="(min-width: 768px)" srcset="{{ block.settings.image | img_url: '900x' }}">
                                <source media="(min-width: 640px)" srcset="{{ block.settings.mobile_image | img_url: '768x' }}">
                                {% if block.settings.mobile_image != blank %}
                                <source media="(min-width: 480px)" srcset="{{ block.settings.mobile_image | img_url: '640x' }}">
                                {% else %}
                                <source media="(min-width: 480px)" srcset="{{ block.settings.image | img_url: '640x', crop: 'center' }}">
                                {% endif %}
                                {% if block.settings.mobile_image != blank %}
                                <source srcset="{{ block.settings.mobile_image | img_url: '480x' }}">
                                {% else %}
                                <source srcset="{{ block.settings.image | img_url: '480x', crop: 'center' }}">
                                {% endif %}
                                <img src="{{ block.settings.image | img_url: '1920x' }}" alt="" />
                            </picture>
                            {% else %}
                            <span class="placeholder-background">
                                {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                            </span>
                            {% endif %}
                            {% endif %}
                            {% if block.settings.link != blank %}</a>{% endif %}
                        {% if block.settings.title != blank or block.settings.content != blank or block.settings.link_1 != blank or block.settings.link_2 != blank %}
                        <div class="caption {{ block.settings.content_position }} {{ block.settings.vertical_align }} {{ block.settings.horizontal_align }} {{ block.settings.vertical_align_mobile }} {{ block.settings.horizontal_align_mobile }}">
                            <div class="wrapper">
                                <div class="content">
                                    {% if block.settings.title != blank %}
                                    <{{ block.settings.title_tag }} class="title">{{ block.settings.title }}</{{ block.settings.title_tag }}>
                                    {% endif %}
                                    {% if block.settings.content != blank %}
                                    <div class="text">{{ block.settings.content }}</div>
                                    {% endif %}
                                    {% if block.settings.icon %}
                                    <div class="icon">
                                        <picture>
                                            <img src="{{ block.settings.icon | img_url: '1920x' }}" alt="" loading="lazy" importance="low" />
                                        </picture>
                                    </div>
                                    {% endif %}
                                    {% if block.settings.link_1 != blank or block.settings.link_2 != blank %}
                                    <div class="buttons {{ block.settings.button_position }}">
                                        {% if block.settings.link_1 != blank %}
                                        <a class="{{block.settings.button_style_1}}" href="{{ block.settings.link_1 }}">{{ block.settings.button_text_1 }}</a>
                                        {% endif %}
                                        {% if block.settings.link_2 != blank %}
                                        <a class="{{block.settings.button_style_2}}" href="{{ block.settings.link_2 }}">{{ block.settings.button_text_2 }}</a>
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<style>
  @media only screen and (max-width: 767px) {
    .home-sections .slideshow .video-frame iframe{
		transform: scale(4);
    	top: 0;
    	left: 0;
    }
  }
</style>
{% endif %}
